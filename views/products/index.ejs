<%- include('../partials/header', { title: "List Produk" }) %>

<h3>List Produk</h3>

<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nama Produk</th>
      <th>Harga</th>
    </tr>
  </thead>

  <tbody>
    <% products.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
